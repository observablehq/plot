{
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "no-cond-assign": 0,
    "no-constant-condition": 0,
    "no-sparse-arrays": 0,
    "no-unexpected-multiline": 0,
    "comma-dangle": ["error", "never"],
    "semi": [2, "always"]
  }
}
