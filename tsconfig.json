{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "stripInternal": true,
    "outDir": "build",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "types",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@observablehq/plot": ["./src/index.js"]
    }
  },
  "include": ["src/**/*"]
}
