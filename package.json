  "exports": {
    "mocha": "./src/index.js",
    "umd": "./dist/plot.umd.min.js",
    "default": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/observablehq/plot.git"
  },
  "files": [
    "dist/**/*.js",
    "src/**/*.js",
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "scripts": {
    "test": "yarn test:mocha && yarn test:typecheck && yarn test:lint",
