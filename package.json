{
  "name": "@observablehq/plot",
  "description": "A JavaScript library for exploratory data visualization.",
  "version": "0.0.0",
  "author": {
    "name": "Observable, Inc.",
    "url": "https://observablehq.com"
  },
  "license": "ISC",
  "main": "dist/@observablehq/plot.cjs.js",
  "unpkg": "dist/@observablehq/plot.umd.min.js",
  "module": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/observablehq/plot.git"
  },
  "files": [
    "dist/**/*.js",
    "src/**/*.js"
  ],
  "scripts": {
    "pretest": "rollup -c",
