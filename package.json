{
  "name": "@observablehq/plot",
  "description": "A JavaScript library for exploratory data visualization.",
  "version": "0.0.1",
  "author": {
    "name": "Observable, Inc.",
    "url": "https://observablehq.com"
  },
  "license": "ISC",
  "main": "dist/plot.cjs.js",
  "unpkg": "dist/plot.umd.min.js",
  "module": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/observablehq/plot.git"
  },
  "files": [
    "dist/**/*.js",
    "src/**/*.js"
  ],
  "scripts": {
    "test": "mkdir -p test/output && tape -r esm -r module-alias/register 'test/**/*-test.js' | tap-dot && node -r esm -r module-alias/register test/plot.js | tap-dot && eslint src test",
    "prepublishOnly": "rm -rf dist && rollup -c",
    "postpublish": "git push && git push --tags",
    "dev": "snowpack dev",
    "build": "snowpack build"
  },
  "_moduleAliases": {
    "@observablehq/plot": "./src/index.js"
  },
  "devDependencies": {
    "d3": "^6.5.0",
    "eslint": "^7.12.1",
    "esm": "^3.2.25",
    "js-beautify": "^1.13.0",
    "jsdom": "^16.4.0",
    "module-alias": "^2.2.2",
    "rollup": "^2.32.1",
    "rollup-plugin-terser": "^7.0.2",
    "snowpack": "^3.0.11",
    "tap-dot": "^2.0.0",
    "tape": "^4.13.3",
    "tape-await": "^0.1.2"
  },
  "dependencies": {
    "d3-array": "^2.10.0",
    "d3-axis": "^2.0.0",
    "d3-color": "^2.0.0",
    "d3-interpolate": "^2.0.1",
    "d3-scale": "^3.2.3",
    "d3-scale-chromatic": "^2.0.0",
    "d3-selection": "^2.0.0",
