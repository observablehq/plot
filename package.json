    "tape": "^4.13.3",
    "tape-await": "^0.1.2"
  },
  "dependencies": {
    "d3-array": "^2.8.0",
    "d3-axis": "^2.0.0",
    "d3-interpolate": "^2.0.1",
    "d3-scale": "^3.2.3",
    "d3-scale-chromatic": "^2.0.0",
    "d3-selection": "^2.0.0",
    "d3-shape": "^2.0.0"
